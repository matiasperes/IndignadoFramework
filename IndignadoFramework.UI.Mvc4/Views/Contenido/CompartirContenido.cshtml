@model IndignadoFramework.Entities.Contenido

@{
    ViewBag.Title = "Compartir Contenido";
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")"></script>

<div class="post">
    <h2>Compartir Contenido</h2>



    <div id="compartirContenido">

        @using (Html.BeginForm( "Create", "Contenido", FormMethod.Post,new { enctype = "multipart/form-data" }))
        {
            @Html.ValidationSummary(true)
            
            <fieldset>
                <legend>Ingrese un título para el contenido</legend>
                <div id="titulo">
                     <div class="editor-field">
                        @Html.EditorFor(model => model.Titulo)
                        @Html.ValidationMessageFor(model => model.Titulo)
                     </div>
                </div>
             </fieldset>
                
            
            <div id="compartirContenidoLink">
                <fieldset>
                    <legend>Ingrese un link para compartir</legend>
                    <div id="titulo">
                        <div class="editor-field">
                            @Html.TextBoxFor(model => model.Ubicacion)
                            @Html.ValidationMessageFor(model => model.Ubicacion)
                        </div>
                    </div>
                </fieldset>
            
            
            @Ajax.ActionLink("Haga click aquí para cargar un archivo", "ObtenerCompartirParcial",
                new AjaxOptions
                {
                    UpdateTargetId = "compartirContenidoLink",
                    InsertionMode = InsertionMode.Replace,
                    HttpMethod = "GET"
                })
            <br />
            <br />
            </div>
            <fieldset>
                <legend>Elija una categoría para el link</legend>
                    <div id="categoriaTematica">

                     <div class="editor-field">
                        @Html.DropDownListFor(model => model.CategoriaTematicaId, (SelectList)ViewBag.Categorias)
                        @Html.ValidationMessageFor(model => model.CategoriaTematicaId)
                     </div>
                 </div>
             </fieldset>
            <p>
                <input class="boton" type="submit" value="Compartir" />
            </p>
        
        }
    </div>

</div>